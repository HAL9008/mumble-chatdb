[Unit]
Description=Mumble History Bot
After=network.target mumble-server.service
PartOf=mumble-server.service

[Service]
Type=simple
User=mumblebot
Group=mumblebot
WorkingDirectory=/opt/mumble-history-bot/
EnvironmentFile=/etc/mumble-history-bot.env
ExecStart=/usr/bin/python3 /opt/mumble-history-bot/mumble_history_bot.py
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
